<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/strokedrec">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/usericon"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"/>
        <EditText
            android:id="@+id/register_firstNameEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/first_name_label"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textColorHint="@color/dark_hint"
            android:background="@null"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/strokedrec">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/usericon"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"/>
        <EditText
            android:id="@+id/register_lastNameEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/last_name_label"
            android:inputType="textPersonName"
            android:textColorHint="@color/dark_hint"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:background="@null"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID"
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="7dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/strokedrec">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/studentid"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"/>
        <EditText
            android:id="@+id/register_studentIdEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/student_id_label"
            android:inputType="text"
            android:textColorHint="@color/dark_hint"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="7dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/strokedrec">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:background="@drawable/gmail"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"/>
        <EditText
            android:id="@+id/register_emailEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/gmail_label"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_hint"
            android:textSize="14sp"
            android:background="@null"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Password"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="7dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/strokedrec">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/key"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"/>
        <EditText
            android:id="@+id/register_passwordEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/password_label"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_hint"
            android:textSize="14sp"
            android:background="@null"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        <ImageView
            android:id="@+id/register_passwordToggle"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/hide"
            android:scaleType="centerInside"
            android:padding="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle password visibility"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="7dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/strokedrec">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/key"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"/>
        <EditText
            android:id="@+id/register_confirmPasswordEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textColorHint="@color/dark_hint"
            android:background="@null"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        <ImageView
            android:id="@+id/register_confirmPasswordToggle"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/hide"
            android:scaleType="centerInside"
            android:padding="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle confirm password visibility"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/register_registerButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/redtenradius"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/sign_up_button_text"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal" />

</LinearLayout>